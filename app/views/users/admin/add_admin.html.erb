<% provide(:title, "Add Admin") %>
<% provide(:main_content_header, "Add Admin") %>
<% content_for :side_nav do %>
  <% render partial: "layouts/admin_side_nav" %>
<% end %>

<% if @password_bad == true %>
  <span> PASSWORDS DID NOT MATCH </span>
<% end %>

<%= form_for(:new_admin, url: add_admin_path) do |f| %>
 <!-- Row 1 -->
  <div class="row">
    <!-- First Name -->
    <div class="four columns">
      <label for="first-name">First Name</label>
       <%= f.text_field(:first_name) %>
    </div>

    <!-- Last Name -->
    <div class="four columns">
      <label for="last-name">Last Name</label>
       <%= f.text_field(:last_name) %>
    </div>

    <!-- Dot Number -->
    <div class="two columns">
      <label for="dot=number">Dot Number</label>
       <%= f.text_field(:dot_number) %>
    </div>
  </div>

  <!-- Row 2 -->
  <div class="row">
    <!-- Password -->
    <div class="four columns">
      <label for="user-password">Password</label>
      <%= f.password_field(:password) %>
    </div>

    <!-- Retype Password -->
    <div class="four columns">
      <label for="user-retyped-password">Retype Password</label>
       <%= f.password_field(:password2) %>
    </div>
  </div>


  <!-- Row 4 -->
  <div class="row">
    <div class="two columns offset-by-eight">
      <input class="button-primary" type="submit" value="Submit">
    </div>
  </div>

  <% end %>


