<% provide(:title, "Request Grader") %>
<% provide(:main_content_header, "Request a Grader") %>
<% content_for :side_nav do %>
  <% if current_user.role == "admin" %>
    <% render partial: "layouts/admin_side_nav" %>
  <% elsif current_user.role == "instructor" %>
    <% render partial: "layouts/instructor_side_nav" %>
  <% else %>
    <% render partial: "layouts/student_side_nav" %>
  <% end %>
<% end %>
<!-- Row 1 -->
<div class="row">
  <!-- Student Last Name -->
  <div class="four columns">
    <strong>Student Name.#</strong>
    <p><%= @user.fname %> <%= @user.lname %>.<%= @user.dot_number %></p>
  </div>

  <!-- Course Name -->
  <div class="four columns">
    <strong>Course Number</strong>
    <p>CSE <%= @request.course_number %></p>
  </div>

  <div class="four columns">
    <strong><%= @request.section %></strong>
    <p>1111</p>
  </div>
</div>